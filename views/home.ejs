<%-include('partials/header')-%>




<!--Hey! This is the original version
of Simple CSS Waves-->

<div style="border-radius: 3px;" class="header">

  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6">

        <div style="margin-left:-1.5rem; float:left;">
          <img src="/images/icons8-blossom-64.png">
        </div>
      <h1 id="headC" style="margin-left:3rem; text-align:left; margin-top:8rem; font-size:5rem; font-family: 'Libre Baskerville', serif; font-weight: 700;">Welcome to the <br> trendy blogs!</h1>

      </div>
      <div class="col-md-6 col-sm-6">
        <div style="margin-bottom:-2.9rem ; margin-top:2rem; padding:60px;" class="row">
          <div class="col-md-3 col-sm-3 col-lg-3"><img src="/images/icons8-blockchain-technology-64.png"></div>
          <div class="col-md-3 col-sm-3 col-lg-3"><img src="/images/icons8-paralympic-runner-64.png"></div>
          <div class="col-md-3 col-sm-3 col-lg-3"><img src="/images/icons8-news-64.png"></div>
          <div class="col-md-3 col-sm-3 col-lg-3"><img src="/images/icons8-cheese-64.png"></div>
        </div>
        <p style="font-weight:400; font-family:'Poppins', sans-serif; font-size:1.4rem; letter-spacing: 2px;">We   smash   you   with   the   information   that   will   make   your   life   easier.   Really.</p>
      </div>
    </div>
  </div>
  
  <!--Waves Container-->
  <div>
  <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
  viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
  <defs>
  <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
  </defs>
  <g class="parallax">
  <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
  <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
  <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
  <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
  </g>
  </svg>
  </div>
  <!--Waves end-->
  
</div>
  <!--Header ends-->



  <section>
    <h1 style="margin-top:4rem; margin-bottom:4rem; text-align:center; font-size:3rem; font-family: 'Libre Baskerville', serif; font-weight: 700;">Latest Blogs!</h1>


    <%posts.forEach(function(post){%>

      <%var title=post.title;%>
        <%var body=post.body;%>
        <%var id=post._id;%>
          <%body=body.substring(0, 100);%>

            <div class="container">
              <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-6">
                  <div class="panel panel-default">
                    <img style="width:100%; height:100%; border-radius: 3px 3px 0px 0px;" src="/images/<%=post.image%>">
                    <div style="font-size: 2rem; font-weight:700; text-align: left; font-family: 'Poppins', sans-serif;" class="panel-heading"><%=title%>

                      <div><p style="margin-top:1rem; font-size:small; font-weight:normal ;"><%=body%>...</p></div>
                      
                      <a href="posts/<%=id%>"><button class="btn btn-primary">Read More...</button></a>
                      
                      
                    </div>
                  </div>
                </div>
            <%})%>
        
      </div>
    </div>

  </section>












  

